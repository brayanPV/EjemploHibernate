<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="GuiaHibernate.Usuario" table="usuario">
        <id name="usuario" column="usuario">
        </id>
        <property name="clave" type="string" column="clave" />
        <property name="nombre" type="string" column="clave" />
        <property name="direccion" type="string" column="clave" />
        <property name="telefono" type="string" column="clave" />
        <property name="correo" type="string" column="clave" />
    </class>
</hibernate-mapping>